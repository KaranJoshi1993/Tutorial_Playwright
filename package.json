{
  "name": "playwright-mocha-pom-ts",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
  "clean": "rimraf allure-results allure-report test-results",
  
  "pretest": "npm run clean",
  "test": "playwright test",
  "test:headed": "playwright test --headed",
  "test:chromium": "playwright test --project=chromium",
  "test:debug": "playwright test --debug",
  "test:ui": "playwright test --ui",

  "report": "allure generate allure-results --clean && allure open",
  "report:generate": "allure generate allure-results --clean",
  "report:open": "allure open"
  },
  
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "qa"
  ],
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/adm-zip": "^0.5.7",
    "@types/mocha": "^10.0.0",
    "@types/node": "^22.10.2",
    "@types/pdf-parse": "^1.1.5",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "fast-xml-parser": "^5.2.5",
    "mocha": "^10.8.2",
    "mocha-allure-reporter": "^1.4.0",
    "playwright": "^1.48.0",
    "rimraf": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@faker-js/faker": "^9.3.0",
    "@types/pngjs": "^6.0.5",
    "adm-zip": "^0.5.16",
    "axios": "^1.7.9",
    "csv-parse": "^6.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "get-video-duration": "^4.1.0",
    "pdf-parse": "^1.1.1",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "sharp": "^0.34.3"
  }
}
