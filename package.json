{
  "name": "playwright-mocha-pom-ts",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "mocha -r ts-node/register tests/**/*.spec.ts --timeout 60000 --reporter mocha-allure-reporter",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "test:report": "rimraf allure-results allure-report && npx playwright test && allure generate allure-results --clean -o allure-report && allure open allure-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^22.0.0",
    "allure-commandline": "^2.24.0",
    "allure-playwright": "^3.4.1",
    "mocha": "^10.8.2",
    "mocha-allure-reporter": "^1.4.0",
    "playwright": "^1.48.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
